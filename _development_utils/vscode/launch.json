    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "attach",
            "name": "Engrave front dashboard attach",
            "port": 9229,
            "address": "127.0.0.1",
            "localRoot": "${workspaceFolder}/engrave-front-dashboard",
            "remoteRoot": "/app",
            "protocol": "inspector",
